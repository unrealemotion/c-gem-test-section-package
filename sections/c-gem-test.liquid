{{ 'section-c-gem-test.css' | asset_url | stylesheet_tag }}

<div class="c-gem-test-section isolate" data-section-id="{{ section.id }}">
  {%- for block in section.blocks -%}
    <div class="block-padding" {{ block.shopify_attributes }}>
      {%- case block.type -%}
        {%- when 'features_with_image' -%}
          {%- style -%}
            /* --- Block Specific Styles --- */
            .c-gem-test__button--primary-{{ block.id }} {
              background-color: {{ block.settings.button_background }};
              color: {{ block.settings.button_text_color }};
            }
             .c-gem-test__button--primary-{{ block.id }}:hover {
               background-color: {{ block.settings.button_background | color_darken: 10 }};
             }
          {%- endstyle -%}

          <div class="c-gem-test__features page-width">
            {%- if block.settings.heading != blank -%}
              <h2 class="c-gem-test__features-main-heading">{{ block.settings.heading | escape }}</h2>
            {%- endif -%}

            <div class="c-gem-test__features-content-wrapper">
              {%- comment -%} --- Left Features Column --- {%- endcomment -%}
              <div class="c-gem-test__features-column">
                {%- if block.settings.feature_1_title != blank -%}
                  <div class="c-gem-test__feature-item">
                    {%- if block.settings.feature_1_icon != blank -%}
                      <div class="c-gem-test__feature-icon-wrapper">
                        {{
                          block.settings.feature_1_icon
                          | image_url: width: 120
                          | image_tag: loading: 'lazy', widths: '60, 120', class: 'c-gem-test__feature-icon'
                        }}
                      </div>
                    {%- else -%}
                      <div class="c-gem-test__feature-icon-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                    <div class="c-gem-test__feature-text-content">
                      <h3 class="c-gem-test__feature-title">{{ block.settings.feature_1_title | escape }}</h3>
                      {%- if block.settings.feature_1_desc != blank -%}
                        <p class="c-gem-test__feature-description">{{ block.settings.feature_1_desc | escape }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}

                {%- if block.settings.feature_2_title != blank -%}
                  <div class="c-gem-test__feature-item">
                    {%- if block.settings.feature_2_icon != blank -%}
                      <div class="c-gem-test__feature-icon-wrapper">
                        {{
                          block.settings.feature_2_icon
                          | image_url: width: 120
                          | image_tag: loading: 'lazy', widths: '60, 120', class: 'c-gem-test__feature-icon'
                        }}
                      </div>
                    {%- else -%}
                      <div class="c-gem-test__feature-icon-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                    <div class="c-gem-test__feature-text-content">
                      <h3 class="c-gem-test__feature-title">{{ block.settings.feature_2_title | escape }}</h3>
                      {%- if block.settings.feature_2_desc != blank -%}
                        <p class="c-gem-test__feature-description">{{ block.settings.feature_2_desc | escape }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              </div>

              {%- comment -%} --- Center Image --- {%- endcomment -%}
              <div class="c-gem-test__features-center-image-wrapper">
                {%- if block.settings.center_image != blank -%}
                  {{
                    block.settings.center_image
                    | image_url: width: 740
                    | image_tag:
                      loading: 'lazy',
                      widths: '370, 740',
                      sizes: '(max-width: 989px) 90vw, 370px',
                      class: 'c-gem-test__features-center-image'
                  }}
                {%- else -%}
                  <div class="c-gem-test__features-center-image-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>

              {%- comment -%} --- Right Features Column --- {%- endcomment -%}
              <div class="c-gem-test__features-column">
                {%- if block.settings.feature_3_title != blank -%}
                  <div class="c-gem-test__feature-item">
                    {%- if block.settings.feature_3_icon != blank -%}
                      <div class="c-gem-test__feature-icon-wrapper">
                        {{
                          block.settings.feature_3_icon
                          | image_url: width: 120
                          | image_tag: loading: 'lazy', widths: '60, 120', class: 'c-gem-test__feature-icon'
                        }}
                      </div>
                    {%- else -%}
                      <div class="c-gem-test__feature-icon-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                    <div class="c-gem-test__feature-text-content">
                      <h3 class="c-gem-test__feature-title">{{ block.settings.feature_3_title | escape }}</h3>
                      {%- if block.settings.feature_3_desc != blank -%}
                        <p class="c-gem-test__feature-description">{{ block.settings.feature_3_desc | escape }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}

                {%- if block.settings.feature_4_title != blank -%}
                  <div class="c-gem-test__feature-item">
                    {%- if block.settings.feature_4_icon != blank -%}
                      <div class="c-gem-test__feature-icon-wrapper">
                        {{
                          block.settings.feature_4_icon
                          | image_url: width: 120
                          | image_tag: loading: 'lazy', widths: '60, 120', class: 'c-gem-test__feature-icon'
                        }}
                      </div>
                    {%- else -%}
                      <div class="c-gem-test__feature-icon-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                    <div class="c-gem-test__feature-text-content">
                      <h3 class="c-gem-test__feature-title">{{ block.settings.feature_4_title | escape }}</h3>
                      {%- if block.settings.feature_4_desc != blank -%}
                        <p class="c-gem-test__feature-description">{{ block.settings.feature_4_desc | escape }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </div>

            {%- comment -%} --- CTA and Guarantee --- {%- endcomment -%}
            <div class="c-gem-test__features-cta-guarantee-wrapper">
              {%- if block.settings.button_label != blank -%}
                <a
                  href="{{ block.settings.button_link | default: '#' }}"
                  class="c-gem-test__button c-gem-test__button--primary c-gem-test__button--primary-{{ block.id }} c-gem-test__features-cta-button"
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}

              <div class="c-gem-test__features-guarantee-payments">
                {%- if block.settings.guarantee_text != blank -%}
                  <div class="c-gem-test__features-guarantee">
                    {%- if block.settings.guarantee_icon != blank -%}
                      <span class="c-gem-test__features-guarantee-icon">
                        {{
                          block.settings.guarantee_icon
                          | image_url: width: 32
                          | image_tag: loading: 'lazy', widths: '16, 32'
                        }}
                      </span>
                    {%- else -%}
                      <span class="c-gem-test__features-guarantee-icon">
                        <div class="placeholder-svg">üõ°Ô∏è</div>
                        <!-- Default Emoji shield -->
                      </span>
                    {%- endif -%}
                    <span class="c-gem-test__features-guarantee-text">
                      {{- block.settings.guarantee_text | escape -}}
                    </span>
                  </div>
                {%- endif -%}

                <div class="c-gem-test__features-payments">
                  {%- for i in (1..5) -%}
                    {%- liquid
                      assign setting_name = 'payment_icon_' | append: i
                      assign payment_icon = block.settings[setting_name]
                    -%}
                    {%- if payment_icon != blank -%}
                      <span class="c-gem-test__features-payment-icon">
                        {{ payment_icon | image_url: height: 48 | image_tag: loading: 'lazy', heights: '24, 48' }}
                      </span>
                    {%- else -%}
                      {%- comment -%} Optionally show placeholder if needed {%- endcomment -%}
                      {% comment %}
                        <span class="c-gem-test__features-payment-icon">
                           <div class="placeholder-svg">{{ 'image' | placeholder_svg_tag }}</div>
                        </span>
                      {% endcomment %}
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              </div>
            </div>
          </div>

        {%- when 'content_with_stats' -%}
          {%- style -%}
            .c-gem-test__stats--{{ block.id }} {
              background-color: {{ block.settings.background_color }};
            }
            .c-gem-test__stats-keypoints-list--{{ block.id }} .c-gem-test__keypoint-stat {
               color: {{ block.settings.stat_color }};
            }
            .c-gem-test__button--secondary-{{ block.id }} {
              background-color: {{ block.settings.button_background }};
              color: {{ block.settings.button_text_color }};
            }
            .c-gem-test__button--secondary-{{ block.id }}:hover {
              background-color: {{ block.settings.button_background | color_darken: 10 }};
            }
          {%- endstyle -%}
          <div class="c-gem-test__stats c-gem-test__stats--{{ block.id }}">
            <div class="page-width" style="display: contents;">
              {%- comment %} Allows flex on parent to work directly with columns {%- endcomment %}
              <div class="c-gem-test__stats-content-column">
                <div class="c-gem-test__stats-heading-group">
                  {%- if block.settings.heading != blank -%}
                    <h2 class="c-gem-test__stats-heading">{{ block.settings.heading | escape }}</h2>
                  {%- endif -%}
                  {%- if block.settings.description != blank -%}
                    <div class="c-gem-test__stats-description rte">{{ block.settings.description }}</div>
                  {%- endif -%}
                </div>

                {%- if block.settings.key_points_title != blank
                  or block.settings.key_point_1_text != blank
                  or block.settings.key_point_2_text != blank
                  or block.settings.key_point_3_text != blank
                -%}
                  <div class="c-gem-test__stats-keypoints-group">
                    {%- if block.settings.key_points_title != blank -%}
                      <h3 class="c-gem-test__stats-keypoints-title">{{ block.settings.key_points_title | escape }}</h3>
                    {%- endif -%}
                    <div class="c-gem-test__stats-keypoints-list c-gem-test__stats-keypoints-list--{{ block.id }}">
                      {%- for i in (1..3) -%}
                        {%- liquid
                          assign stat_setting = 'key_point_' | append: i | append: '_stat'
                          assign text_setting = 'key_point_' | append: i | append: '_text'
                          assign stat_value = block.settings[stat_setting]
                          assign text_value = block.settings[text_setting]
                          assign show_divider = false
                          if i < 3
                            assign next_text_setting = 'key_point_' | append: i | plus: 1 | append: '_text'
                            assign next_text_value = block.settings[next_text_setting]
                            if text_value != blank and next_text_value != blank
                              assign show_divider = true
                            endif
                          endif
                        -%}
                        {%- if text_value != blank -%}
                          <div class="c-gem-test__keypoint-item">
                            {%- if stat_value != blank -%}
                              <span class="c-gem-test__keypoint-stat">{{ stat_value | escape }}</span>
                            {%- endif -%}
                            <p class="c-gem-test__keypoint-text">{{ text_value | escape }}</p>
                          </div>
                          {%- if show_divider -%}
                            <hr class="c-gem-test__keypoint-divider">
                          {%- endif -%}
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endif -%}

                {%- if block.settings.button_label != blank -%}
                  <div class="c-gem-test__stats-button-wrapper">
                    <a
                      href="{{ block.settings.button_link | default: '#' }}"
                      class="c-gem-test__button c-gem-test__button--secondary c-gem-test__button--secondary-{{ block.id }} c-gem-test__stats-button"
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  </div>
                {%- endif -%}
              </div>

              <div class="c-gem-test__stats-image-column">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 1140
                    | image_tag: loading: 'lazy', widths: '285, 570, 1140', sizes: '(max-width: 989px) 90vw, 570px'
                  }}
                {%- else -%}
                  <div class="c-gem-test__stats-image-placeholder">
                    {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>

        {%- when 'alternating_media_rows' -%}
          <div class="c-gem-test__alternating page-width">
            <div class="c-gem-test__alternating-row">
              <div class="c-gem-test__alternating-media-wrapper">
                {%- case block.settings.row_1_media_type -%}
                  {%- when 'image' -%}
                    {%- if block.settings.row_1_image != blank -%}
                      {{
                        block.settings.row_1_image
                        | image_url: width: 1140
                        | image_tag: loading: 'lazy', widths: '285, 570, 1140', sizes: '(max-width: 989px) 90vw, 570px'
                      }}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                  {%- when 'video_url' -%}
                    {%- if block.settings.row_1_video_url.id != blank -%}
                      {%- assign video_host = block.settings.row_1_video_url.type -%}
                      {%- if video_host == 'youtube' -%}
                        <iframe
                          src="https://www.youtube.com/embed/{{ block.settings.row_1_video_url.id }}?enablejsapi=1"
                          frameborder="0"
                          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen
                        ></iframe>
                      {%- elsif video_host == 'vimeo' -%}
                        <iframe
                          src="https://player.vimeo.com/video/{{ block.settings.row_1_video_url.id }}?title=0&byline=0&portrait=0&autoplay=0"
                          frameborder="0"
                          allow="autoplay; fullscreen"
                          allowfullscreen
                        ></iframe>
                      {%- endif -%}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'video' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                  {%- when 'shopify_video' -%}
                    {%- if block.settings.row_1_shopify_video != blank -%}
                      {{ block.settings.row_1_shopify_video | video_tag: controls: true, class: 'shopify-video' }}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'video' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              </div>
              <div class="c-gem-test__alternating-text-wrapper">
                {%- if block.settings.row_1_heading != blank -%}
                  <h2 class="c-gem-test__alternating-heading">{{ block.settings.row_1_heading | escape }}</h2>
                {%- endif -%}
                {%- if block.settings.row_1_description != blank -%}
                  <div class="c-gem-test__alternating-description rte">{{ block.settings.row_1_description }}</div>
                {%- endif -%}
              </div>
            </div>
            <div class="c-gem-test__alternating-row c-gem-test__alternating-row--reverse">
              <div class="c-gem-test__alternating-media-wrapper">
                {%- case block.settings.row_2_media_type -%}
                  {%- when 'image' -%}
                    {%- if block.settings.row_2_image != blank -%}
                      {{
                        block.settings.row_2_image
                        | image_url: width: 1140
                        | image_tag: loading: 'lazy', widths: '285, 570, 1140', sizes: '(max-width: 989px) 90vw, 570px'
                      }}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                  {%- when 'video_url' -%}
                    {%- if block.settings.row_2_video_url.id != blank -%}
                      {%- assign video_host = block.settings.row_2_video_url.type -%}
                      {%- if video_host == 'youtube' -%}
                        <iframe
                          src="https://www.youtube.com/embed/{{ block.settings.row_2_video_url.id }}?enablejsapi=1"
                          frameborder="0"
                          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen
                        ></iframe>
                      {%- elsif video_host == 'vimeo' -%}
                        <iframe
                          src="https://player.vimeo.com/video/{{ block.settings.row_2_video_url.id }}?title=0&byline=0&portrait=0&autoplay=0"
                          frameborder="0"
                          allow="autoplay; fullscreen"
                          allowfullscreen
                        ></iframe>
                      {%- endif -%}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'video' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                  {%- when 'shopify_video' -%}
                    {%- if block.settings.row_2_shopify_video != blank -%}
                      {{ block.settings.row_2_shopify_video | video_tag: controls: true, class: 'shopify-video' }}
                    {%- else -%}
                      <div class="c-gem-test__alternating-media-placeholder">
                        {{ 'video' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              </div>
              <div class="c-gem-test__alternating-text-wrapper">
                {%- if block.settings.row_2_heading != blank -%}
                  <h2 class="c-gem-test__alternating-heading">{{ block.settings.row_2_heading | escape }}</h2>
                {%- endif -%}
                {%- if block.settings.row_2_description != blank -%}
                  <div class="c-gem-test__alternating-description rte">{{ block.settings.row_2_description }}</div>
                {%- endif -%}
              </div>
            </div>
          </div>
      {%- endcase -%}
    </div>
  {%- endfor -%}
</div>

